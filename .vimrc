colorscheme basic-dark
syntax on
set cursorline
set cursorcolumn
set number
set colorcolumn=81

"""""""""""""""
" Indentation "
"""""""""""""""
filetype plugin indent on
" Show existing tab with 4 spaces width
set tabstop=4
" When indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
